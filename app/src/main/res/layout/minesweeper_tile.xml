<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/gray15"
    android:padding="1dp">

    <ImageView
        android:id="@+id/tile_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_tile"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_flag"
        android:visibility="gone"
        android:background="@color/gray14"
        android:layout_gravity="center"/>

    <com.etiennelawlor.minesweeper.views.CustomFontTextView
        android:id="@+id/tile_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:paddingTop="4dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/gray14"
        app:textFont="PressStart2P"/>

